# TippingPoint Configurator Environment Configuration

# Application Settings
NODE_ENV=production
PORT=3000
HOSTNAME=0.0.0.0

# Application URLs
NEXT_PUBLIC_APP_URL=https://your-domain.com
NEXT_PUBLIC_API_URL=https://your-domain.com/api

# Security Settings
NEXT_PUBLIC_APP_NAME="TippingPoint Configurator"
NEXT_PUBLIC_APP_VERSION="1.0"

# Data Storage Paths
DATA_DIR=/opt/tippingpointconfigurator/data
BACKUP_DIR=/opt/tippingpointconfigurator/backups
LOG_DIR=/var/log/tippingpoint-configurator

# Performance Settings
MAX_MEMORY=2048
CLUSTER_INSTANCES=max

# Monitoring Settings
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true

# Contact Information
NEXT_PUBLIC_CONTACT_EMAIL=jay_kammerer@trendmicro.com
NEXT_PUBLIC_CONTACT_SUBJECT="TippingPoint Configurator Question"

# Rate Limiting (requests per minute)
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# CORS Settings
CORS_ORIGIN=https://your-domain.com

# SSL/TLS Settings
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000

# Backup Settings
AUTO_BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_INTERVAL_HOURS=24

# Logging Level
LOG_LEVEL=info

# Feature Flags
ADMIN_PANEL_ENABLED=true
DEV_TOOLS_ENABLED=false
ANALYTICS_ENABLED=false
